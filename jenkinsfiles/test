pipeline {
  agent any
  options {
    skipDefaultCheckout(true)
  }
  stages {
    stage('Prepare') {
      steps {
        cleanWs()
        checkout scm
        sh 'make init'
        sh 'make depatch'
        sh 'make patch'
      }
    }
    stage('tests') {
      steps {
        sh 'env -i nix develop -c make rvtest'
      }
    }
  }
}
